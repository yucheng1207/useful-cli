{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "bld",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@/*": ["src/*"],
            "@main/*": ["src/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["src/**/*"]
}
