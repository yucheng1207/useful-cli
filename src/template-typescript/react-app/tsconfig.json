{
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "strict": false,
        "strictNullChecks": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "lib": ["es6", "dom"]
    },
    "exclude": ["bin", "node_modules"]
}
