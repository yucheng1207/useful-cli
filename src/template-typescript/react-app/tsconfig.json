{
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react-jsx",
        "strict": false,
        "strictNullChecks": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["src"]
}
